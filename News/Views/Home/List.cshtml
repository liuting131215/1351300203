
@{
    ViewBag.Title = "List";
    var newList = ViewBag.data as string[];
    var ourpage = (int)ViewBag.page;

    var start = ourpage-3;
   

}

<h2>List</h2>
<h3> 第 @ViewBag.page 页 </h3>
<ol>
    @foreach (var item in newList)
    {
        <li>@item</li>
    }
</ol>
<ol>
    @for (int i = 0; i < newList.Length; i++)
    {
        <li>@newList[i] </li>
    }
</ol>
<ol>
    @if (start <= 0) { start = 1; }
    @for (int i = start; i <= ourpage+3; i++)
    {
        <li>
            @Html.ActionLink(string.Format("第{0}页",i),"List","Home",new { page=i},null )
        </li>
    }
</ol>